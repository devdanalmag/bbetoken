<%- include('partials/header', { title: 'BaseBridge - Blockchain Freelancing Platform' }) %>

<main class="main-content">
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title">The Future of Freelancing is Here</h1>
                <p class="hero-subtitle">Connect with top blockchain developers and designers on the world's first decentralized freelancing platform</p>
                <div class="hero-actions">
                    <a href="/jobs" class="btn btn-primary btn-large">
                        <i class="fas fa-search"></i> Find Jobs
                    </a>
                    <a href="/post-job" class="btn btn-outline btn-large">
                        <i class="fas fa-plus"></i> Post a Job
                    </a>
                </div>
            </div>
            <div class="hero-image">
                <img src="/img/hero-illustration.svg" alt="Blockchain Freelancing" class="hero-img">
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features">
        <div class="container">
            <h2 class="section-title">Why Choose BaseBridge?</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3>Secure Payments</h3>
                    <p>Smart contract-based escrow system ensures secure and transparent payments for all parties.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3>Global Talent</h3>
                    <p>Access to a worldwide network of skilled blockchain developers, designers, and consultants.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-bolt"></i>
                    </div>
                    <h3>Fast Matching</h3>
                    <p>AI-powered matching algorithm connects you with the perfect freelancer for your project.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h3>Growth Focused</h3>
                    <p>Tools and resources to help freelancers and clients grow their blockchain businesses.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats">
        <div class="container">
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-number">10,000+</div>
                    <div class="stat-label">Active Freelancers</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">5,000+</div>
                    <div class="stat-label">Projects Completed</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">$2M+</div>
                    <div class="stat-label">Total Earnings</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">98%</div>
                    <div class="stat-label">Client Satisfaction</div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
        <div class="container">
            <div class="cta-content">
                <h2>Ready to Get Started?</h2>
                <p>Join thousands of freelancers and clients building the future of work on the blockchain.</p>
                <a href="/auth" class="btn btn-primary btn-large">
                    <i class="fas fa-rocket"></i> Join BaseBridge Today
                </a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <div class="footer-brand">
                        <img src="/img/logo.jpg" alt="BaseBridge Logo" class="footer-logo">
                        <span class="footer-title">BaseBridge</span>
                    </div>
                    <p>The world's first decentralized freelancing platform built on blockchain technology.</p>
                </div>
                <div class="footer-section">
                    <h4>Platform</h4>
                    <ul>
                        <li><a href="/jobs">Find Jobs</a></li>
                        <li><a href="/post-job">Post Jobs</a></li>
                        <li><a href="/dashboard">Dashboard</a></li>
                        <li><a href="/profile">Profile</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Support</h4>
                    <ul>
                        <li><a href="#">Help Center</a></li>
                        <li><a href="#">Contact Us</a></li>
                        <li><a href="#">Community</a></li>
                        <li><a href="#">Documentation</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Company</h4>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Careers</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms of Service</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 BaseBridge. All rights reserved.</p>
            </div>
        </div>
    </footer>
</main>

