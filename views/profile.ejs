    <div class="container">
        <div class="profile-container">
            <!-- Profile Sidebar -->
            <div class="profile-sidebar">
                <div class="profile-card">
                    <div class="profile-avatar">
                        <img src="/img/default-avatar.png" alt="Profile Avatar" id="profile-avatar">
                        <button class="avatar-edit" id="edit-avatar">
                            <i class="fas fa-camera"></i>
                        </button>
                    </div>
                    <div class="profile-info">
                        <h2 id="profile-name">John Doe</h2>
                        <p class="profile-title" id="profile-title">Full Stack Developer</p>
                        <div class="profile-rating">
                            <div class="rating-stars">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>
                            <span class="rating-text">5.0 (0 reviews)</span>
                        </div>
                        <p class="profile-location">
                            <i class="fas fa-map-marker-alt"></i>
                            <span id="profile-location">Lagos, Nigera</span>
                        </p>
                        <button class="btn btn-primary btn-edit-profile" id="edit-profile-btn">
                            <i class="fas fa-edit"></i> Edit Profile
                        </button>
                    </div>
                </div>

